@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Hipólito Unanue</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <!-- Panel Izquierdo - Información del Hospital -->
        <div class="login-left">
            <div class="hospital-logo">
                <div class="logo-icon">
                    <i class="fas fa-hospital-alt"></i>
                </div>
                <h1 class="hospital-name">Hospital Hipólito Unanue</h1>
                <p class="hospital-subtitle">Sistema de Gestión Hospitalaria</p>
            </div>
            
            <div class="welcome-content">
                <div class="feature-item">
                    <i class="fas fa-shield-alt"></i>
                    <div>
                        <h3>Acceso Seguro</h3>
                        <p>Protección de datos certificada</p>
                    </div>
                </div>
                <div class="feature-item">
                    <i class="fas fa-clock"></i>
                    <div>
                        <h3>Disponible 24/7</h3>
                        <p>Acceso en cualquier momento</p>
                    </div>
                </div>
                <div class="feature-item">
                    <i class="fas fa-user-md"></i>
                    <div>
                        <h3>Gestión Integral</h3>
                        <p>Todo en un solo lugar</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel Derecho - Formulario de Login -->
        <div class="login-right">
            <div class="login-form-wrapper">
                <div class="login-header">
                    <h2>Bienvenido</h2>
                    <p>Ingrese sus credenciales para acceder al sistema</p>
                </div>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert-danger" role="alert"></div>
                    
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label">
                            <i class="fas fa-envelope"></i> Correo Electrónico
                        </label>
                        <input asp-for="Input.Email" 
                               class="form-control" 
                               autocomplete="username" 
                               aria-required="true" 
                               placeholder="usuario@hospital.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label">
                            <i class="fas fa-lock"></i> Contraseña
                        </label>
                        <div class="password-wrapper">
                            <input asp-for="Input.Password" 
                                   class="form-control" 
                                   autocomplete="current-password" 
                                   aria-required="true" 
                                   placeholder="••••••••" 
                                   type="password"
                                   id="passwordInput" />
                            <button type="button" class="toggle-password" onclick="togglePassword()">
                                <i class="fas fa-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-options">
                        <label class="remember-me">
                            <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" />
                            <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                        </label>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-link">
                            ¿Olvidó su contraseña?
                        </a>
                    </div>

                    <button id="login-submit" type="submit" class="btn-login">
                        <span>Iniciar Sesión</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </form>

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="divider">
                        <span>O continuar con</span>
                    </div>

                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="external-login-buttons">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" 
                                        class="btn-external" 
                                        name="provider" 
                                        value="@provider.Name" 
                                        title="Iniciar sesión con @provider.DisplayName">
                                    <i class="fab fa-@provider.Name.ToLower()"></i>
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }

                <div class="login-footer">
                    <p>
                        ¿No tiene una cuenta? 
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                            Reenviar confirmación de correo
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
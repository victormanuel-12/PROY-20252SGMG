@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro de Usuarios";
    Layout = "~/Views/Shared/_LayoutA.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}

<div class="register-container">
    <div class="register-card">
        <div class="register-header">
            <div class="header-icon">
                <i class="fas fa-user-plus"></i>
            </div>
            <h1>Asignar Credenciales</h1>
            <p>Crear una nueva cuenta de acceso al sistema</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger-custom" role="alert"></div>

            <!-- Selección de Rol -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-user-tag"></i>
                    Información del Rol
                </h3>
                
                <div class="form-group-custom">
                    <label asp-for="Input.RoleId" class="form-label-custom">
                        <i class="fas fa-shield-alt"></i> Rol del Usuario
                    </label>
                    <select asp-for="Input.RoleId" 
                            id="roleSelect" 
                            class="form-control-custom" 
                            asp-items="Model.RolesList">
                        <option value="">-- Seleccione un Rol --</option>
                    </select>
                    <span asp-validation-for="Input.RoleId" class="text-danger"></span>
                </div>

                <!-- Campo oculto para almacenar el ID del personal/médico -->
                <input type="hidden" asp-for="Input.PersonalId" id="personalIdInput" />

                <!-- Área para mostrar el personal seleccionado -->
                <div id="selectedPersonalArea" class="selected-personal-card" style="display: none;">
                    <div class="selected-personal-header">
                        <i class="fas fa-user-check"></i>
                        <span>Personal Seleccionado</span>
                    </div>
                    <div class="selected-personal-content">
                        <div class="personal-avatar">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div class="personal-info">
                            <h4 id="selectedPersonalName"></h4>
                            <p id="selectedPersonalCargo"></p>
                            <p id="selectedPersonalDni"></p>
                        </div>
                        <button type="button" class="btn-change-personal" id="changePersonalBtn">
                            <i class="fas fa-exchange-alt"></i> Cambiar
                        </button>
                    </div>
                </div>
            </div>

            <!-- Credenciales de Acceso -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-key"></i>
                    Credenciales de Acceso
                </h3>

                <div class="form-group-custom">
                    <label asp-for="Input.Email" class="form-label-custom">
                        <i class="fas fa-envelope"></i> Correo Electrónico
                    </label>
                    <input asp-for="Input.Email" 
                           class="form-control-custom" 
                           autocomplete="username" 
                           aria-required="true" 
                           placeholder="usuario@hospital.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group-custom">
                        <label asp-for="Input.Password" class="form-label-custom">
                            <i class="fas fa-lock"></i> Contraseña
                        </label>
                        <div class="password-wrapper-custom">
                            <input asp-for="Input.Password" 
                                   class="form-control-custom" 
                                   autocomplete="new-password" 
                                   aria-required="true" 
                                   placeholder="••••••••"
                                   type="password"
                                   id="passwordInput" />
                            <button type="button" class="toggle-password-custom" onclick="togglePasswordVisibility('passwordInput', 'toggleIcon1')">
                                <i class="fas fa-eye" id="toggleIcon1"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="Input.ConfirmPassword" class="form-label-custom">
                            <i class="fas fa-lock"></i> Confirmar Contraseña
                        </label>
                        <div class="password-wrapper-custom">
                            <input asp-for="Input.ConfirmPassword" 
                                   class="form-control-custom" 
                                   autocomplete="new-password" 
                                   aria-required="true" 
                                   placeholder="••••••••"
                                   type="password"
                                   id="confirmPasswordInput" />
                            <button type="button" class="toggle-password-custom" onclick="togglePasswordVisibility('confirmPasswordInput', 'toggleIcon2')">
                                <i class="fas fa-eye" id="toggleIcon2"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Botones de Acción -->
            <div class="form-actions">
                <button type="submit" id="registerSubmit" class="btn-register">
                    <i class="fas fa-user-plus"></i>
                    <span>Registrar Usuario</span>
                </button>
                <a href="/" class="btn-cancel">
                    <i class="fas fa-times"></i>
                    <span>Cancelar</span>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Modal para Selección de Personal -->
<div id="personalModal" class="modal-custom">
    <div class="modal-content-custom">
        <div class="modal-header-custom">
            <h2>
                <i class="fas fa-users"></i>
                Seleccionar Personal
            </h2>
            <button type="button" class="modal-close-btn" id="closeModalBtn">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="modal-body-custom">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" id="searchPersonalInput" placeholder="Buscar por nombre, DNI o cargo..." />
            </div>

            <div id="personalListContainer" class="personal-list-container">
                <!-- Aquí se cargarán los resultados dinámicamente -->
                <div class="loading-spinner">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>Cargando personal...</p>
                </div>
            </div>
        </div>

        <div class="modal-footer-custom">
            <button type="button" class="btn-modal-cancel" id="cancelModalBtn">
                <i class="fas fa-times"></i> Cancelar
            </button>
            <button type="button" class="btn-modal-confirm" id="confirmSelectionBtn" disabled>
                <i class="fas fa-check"></i> Confirmar Selección
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/register.js?v=@(DateTime.Now.Ticks)"></script>

}
// ============================================
// ACTUALIZAR SLOT VISUAL (NUEVO)
// ============================================
function calActualizarSlotVisual(fecha, hora, ocupado) {
  try {
    console.log(`üé® Actualizando slot: ${fecha} ${hora} - ${ocupado ? 'BLOQUEAR' : 'DESBLOQUEAR'}`);
    
    // Normalizar la hora para asegurar formato consistente
    const horaNormalizada = hora.length === 4 ? `0${hora}` : hora;
    
    console.log(`   ‚Üí Hora normalizada: ${horaNormalizada}`);
    
    // Buscar el slot espec√≠fico usando data attributes
    const slots = document.querySelectorAll('.cal-slot');
    
    let slotEncontrado = false;
    
    slots.forEach(slot => {
      const slotFecha = slot.getAttribute('data-fecha');
      const slotHora = slot.getAttribute('data-hora');
      
      // Debug: mostrar comparaciones
      if (slotFecha === fecha) {
        console.log(`   ‚Üí Comparando: "${slotHora}" === "${horaNormalizada}"`);
      }
      
      if (slotFecha === fecha && slotHora === horaNormalizada) {
        console.log(`   ‚úì Slot encontrado en DOM: ${fecha} ${horaNormalizada}`);
        slotEncontrado = true;
        
        if (ocupado) {
          // BLOQUEAR: Cambiar a ocupado (rojo)
          slot.className = 'cal-slot cal-slot-occupied';
          slot.innerHTML = '‚úó';
          slot.title = 'No disponible';
          slot.style.cursor = 'not-allowed';
          slot.removeAttribute('onclick');
          
          // Animaci√≥n de bloqueo
          slot.style.transition = 'all 0.3s ease';
          slot.style.transform = 'scale(0.95)';
          setTimeout(() => {
            slot.style.transform = 'scale(1)';
          }, 300);
          
          console.log('   ‚úì Slot BLOQUEADO (rojo) ‚úó');
        } else {
          // DESBLOQUEAR: Cambiar a disponible (blanco)
          slot.className = 'cal-slot cal-slot-available';
          slot.innerHTML = '';
          slot.title = 'Disponible - Click para reservar';
          slot.style.cursor = 'pointer';
          
          // Restaurar onclick
          const horarioTexto = calGenerarTextoHorario(horaNormalizada);
          slot.setAttribute('onclick', `calAbrirModal('${fecha}', '${horaNormalizada}', '${horarioTexto}')`);
          
          // Animaci√≥n de desbloqueo
          slot.style.transition = 'all 0.3s ease';
          slot.style.transform = 'scale(1.08)';
          slot.style.boxShadow = '0 0 12px rgba(52, 152, 219, 0.5)';
          setTimeout(() => {
            slot.style.transform = 'scale(1)';
            slot.style.boxShadow = '';
          }, 300);
          
          console.log('   ‚úì Slot DESBLOQUEADO (blanco) ‚úì');
        }
      }
    });
    
    if (!slotEncontrado) {
      console.warn(`‚ö†Ô∏è No se encontr√≥ el slot en el DOM: ${fecha} ${horaNormalizada}`);
      console.warn(`   ‚Üí Posibles razones:`);
      console.warn(`      1. El slot no est√° en la semana actual visible`);
      console.warn(`      2. Error en el formato de hora`);
      console.warn(`      3. El calendario necesita recargarse`);
    }
    
    return slotEncontrado;
  } catch (error) {
    console.error('‚ùå Error al actualizar slot visual:', error);
    return false;
  }
}

// ============================================
// GENERAR TEXTO HORARIO (AUXILIAR)
// ============================================
function calGenerarTextoHorario(hora) {
  const [h, m] = hora.split(':').map(Number);
  const minutosSiguiente = (m + 20) % 60;
  const horaSiguiente = m === 40 ? h + 1 : h;
  
  return `${h.toString().padStart(2, '0')}:${m.toString().padStart(2, '0')} - ${horaSiguiente.toString().padStart(2, '0')}:${minutosSiguiente.toString().padStart(2, '0')}`;
}
// ============================================

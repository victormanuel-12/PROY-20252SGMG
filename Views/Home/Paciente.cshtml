@{
    ViewData["Title"] = "Buscar Pacientes";
    Layout = "~/Views/Shared/_LayoutA.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Paciente.css" asp-append-version="true" />
}

<div class="page-container">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- Search Filters -->
    <div class="filters-section">
        <h3 class="section-title">Buscar Pacientes</h3>
        <form id="searchPacienteForm">
            <div class="filters-grid">
                <div class="form-group">
                    <label for="tipoBusqueda">Tipo búsqueda <span title="Seleccione el tipo de documento">(?)</span>:</label>
                    <select id="tipoBusqueda" name="TipoDocumento" class="form-control">
                        <option value="">Seleccione</option>
                        <option value="DNI">DNI</option>
                        <option value="CE">CE</option>
                        <option value="Pasaporte">Pasaporte</option>
                    </select>
                    <span class="error-message" id="error-TipoDocumento"></span>
                </div>
                <div class="form-group">
                    <label for="numeroDocumento">Número documento:</label>
                    <input type="text" id="numeroDocumento" name="NumeroDocumento" class="form-control" placeholder="********">
                    <span class="error-message" id="error-NumeroDocumento"></span>
                </div>
            </div>
            <div class="filters-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                    Buscar
                </button>
                <button type="button" class="btn btn-secondary" id="clearPacienteBtn">
                    <i class="fas fa-eraser"></i>
                    Limpiar
                </button>
            </div>
        </form>
    </div>

    <!-- Add Button -->
    <div class="add-section" id="addHistoriaSection" style="display:none;">
        <span class="text-muted" id="pacienteNoRegistradoMsg" style="margin-left:15px; font-style: italic;">
            <i class="fas fa-info-circle"></i>
            Este paciente aún no tiene historia clínica
        </span>
        <a class="btn btn-primary" href="@Url.Action("Create", "HistoriaClinica")">
            <i class="fas fa-file-medical"></i>
            Crear Historia Clínica
        </a>
    </div>

    <!-- Table Section -->
    <div class="table-section">
        <h3 class="section-title">Pacientes Encontrados</h3>
        <div class="table-responsive">
            <table class="data-table" id="pacienteTable">
                <thead>
                    <tr>
                        <th>TIPO DOCUMENTO</th>
                        <th>NÚMERO DOCUMENTO</th>
                        <th>APELLIDOS Y NOMBRES</th>
                        <th>EDAD ACTUAL</th>
                        <th>GÉNERO</th>
                        <th>ACCIÓN</th>
                    </tr>
                </thead>
                <tbody id="pacienteTableBody">
                    <tr>
                        <td colspan="6" class="no-data">No hay datos disponibles. Use los filtros para buscar pacientes.</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Citas Pendientes Section -->
    <div class="table-section" style="margin-top:30px;">
        <h3 class="section-title">Citas Pendientes</h3>
        <div class="table-responsive">
            <table class="data-table" id="citasPendientesTable">
                <thead>
                    <tr>
                        <th>TIPO DOCUMENTO</th>
                        <th>NÚMERO DOCUMENTO</th>
                        <th>APELLIDOS Y NOMBRES</th>
                        <th>FECHA ATENCIÓN</th>
                        <th>HORA</th>
                        <th>ESTADO</th>
                        <th>MÉDICO</th>
                        <th>ACCIÓN</th>
                    </tr>
                </thead>
                <tbody id="citasPendientesBody">
                    <tr>
                        <td colspan="8" class="no-data">No hay citas pendientes.</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Derivaciones Section -->
    <div class="table-section" style="margin-top:30px;">
        <h3 class="section-title">Derivaciones</h3>
        <div class="table-responsive">
            <table class="data-table" id="derivacionesTable">
                <thead>
                    <tr>
                        <th>TIPO DOC</th>
                        <th>NRO. DOCUMENTO</th>
                        <th>MÉDICO SOLICITANTE</th>
                        <th>ESPECIALIDAD DESTINO</th>
                        <th>FECHA SOLICITUD</th>
                        <th>ESTADO</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody id="derivacionesBody">
                    <tr>
                        <td colspan="7" class="no-data">No hay derivaciones.</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Confirmación Cancelar Cita -->
<div id="cancelConfirmModal" class="custom-modal" style="display:none; position:fixed; top:0; left:0; right:0; bottom:0; background:rgba(0,0,0,0.5); z-index:2000;">
    <div class="modal-content" style="max-width:520px; margin:80px auto; background:#fff; padding:20px; border-radius:8px; box-shadow:0 6px 18px rgba(0,0,0,0.2);">
        <div class="modal-header" style="display:flex; justify-content:space-between; align-items:center;">
            <h5 class="modal-title">¿Está seguro?</h5>
            <button type="button" class="close-btn" onclick="closeCancelModal()" style="background:none; border:0; font-size:18px;">&times;</button>
        </div>
        <div class="modal-body" style="margin-top:10px;">
            <p id="cancelModalMessage">¿Está seguro de que desea cancelar esta cita?</p>
        </div>
        <div class="modal-footer" style="display:flex; justify-content:flex-end; gap:8px; margin-top:16px;">
            <button type="button" class="btn btn-secondary" onclick="closeCancelModal()">No, mantener</button>
            <button type="button" id="confirmCancelBtn" class="btn btn-danger">Sí, cancelar cita</button>
        </div>
    </div>
</div>

<!-- Modal: No se puede cancelar por triaje -->
<div id="cancelBlockedModal" class="custom-modal" style="display:none; position:fixed; top:0; left:0; right:0; bottom:0; background:rgba(0,0,0,0.5); z-index:2001;">
    <div class="modal-content" style="max-width:520px; margin:80px auto; background:#fff; padding:20px; border-radius:8px; box-shadow:0 6px 18px rgba(0,0,0,0.2);">
        <div class="modal-header" style="display:flex; justify-content:space-between; align-items:center;">
            <h5 class="modal-title">No es posible cancelar</h5>
            <button type="button" class="close-btn" onclick="closeBlockedModal()" style="background:none; border:0; font-size:18px;">&times;</button>
        </div>
        <div class="modal-body" style="margin-top:10px;">
            <p id="blockedModalMessage">El paciente cuenta con triaje; no se puede cancelar esta cita.</p>
        </div>
        <div class="modal-footer" style="display:flex; justify-content:flex-end; gap:8px; margin-top:16px;">
            <button type="button" class="btn btn-primary" onclick="closeBlockedModal()">Entendido</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/scriptPaciente.js" asp-append-version="true"></script>
}
@model SGMG.Dtos.Request.HistoriaClinica.HistoriaClinicaCompletaRequestDTO

@{
    ViewData["Title"] = Model.EsEdicion ? "Actualizar Registro Paciente" : "Crear Registro Paciente";
    Layout = "~/Views/Shared/_LayoutA.cshtml";
}

@section Styles {
    <style>
        /* Estilos específicos para el formulario de historia clínica */
        .hc-form-container {
            background-color: #f0f2f5;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            padding: 20px 0;
            min-height: calc(100vh - var(--navbar-height));
        }
        .hc-card {
            border: none;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        .hc-card-header {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            color: white;
            font-weight: 600;
            padding: 15px 20px;
            cursor: pointer;
            border-radius: 8px 8px 0 0 !important;
        }
        .hc-card-header:hover {
            opacity: 0.95;
        }
        .hc-section-title {
            background-color: #e9ecef;
            padding: 10px 15px;
            font-weight: 600;
            color: #495057;
            margin: 20px -20px 20px -20px;
            border-left: 4px solid #2c3e50;
        }
        .hc-form-label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 5px;
        }
        .hc-form-control, .hc-form-select {
            border: 1px solid #ced4da;
            border-radius: 6px;
            padding: 10px 12px;
        }
        .hc-form-control:focus, .hc-form-select:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }
        .hc-btn-primary {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            border: none;
            padding: 12px 30px;
            font-weight: 600;
            border-radius: 6px;
            transition: transform 0.2s;
            color: white;
        }
        .hc-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(44, 62, 80, 0.4);
            background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
            color: white;
        }
        .hc-btn-secondary {
            padding: 12px 30px;
            font-weight: 600;
            border-radius: 6px;
            background-color: #95a5a6;
            border: none;
            color: white;
        }
        .hc-btn-secondary:hover {
            background-color: #7f8c8d;
            color: white;
        }
        .hc-text-danger {
            font-size: 0.875rem;
            margin-top: 5px;
        }
        .hc-collapse-icon {
            float: right;
            transition: transform 0.3s;
        }
        .hc-collapsed .hc-collapse-icon {
            transform: rotate(-90deg);
        }
        .hc-main-title {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 30px;
            text-align: center;
        }
        .hc-required-field::after {
            content: " *";
            color: #e74c3c;
        }
        .hc-alert-success {
            background-color: #d4edda;
            color: #155724;
            border-left: 4px solid #27ae60;
        }
        .hc-alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border-left: 4px solid #e74c3c;
        }
        
        /* Ajustes para el formulario dentro del layout */
        .hc-form-wrapper {
            margin-top: 0;
            margin-left: 0;
        }
        
        /* Asegurar que los estilos no se vean afectados por el layout */
        .hc-form-container .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .hc-form-container .form-control,
        .hc-form-container .form-select {
            background-color: white;
        }
    </style>
}

<div class="hc-form-container hc-form-wrapper">
    <div class="container py-5">
        <h2 class="hc-main-title">@ViewData["Title"]</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert hc-alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert hc-alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert hc-alert-danger">
                <strong>Por favor corrija los siguientes errores:</strong>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="@(Model.EsEdicion ? "Edit" : "Create")" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Paciente.IdPaciente)
            @Html.HiddenFor(m => m.HistoriaClinica.IdHistoria)
            @Html.HiddenFor(m => m.HistoriaClinica.IdPaciente)
            @Html.HiddenFor(m => m.HistoriaClinica.CodigoHistoria)
            @Html.HiddenFor(m => m.Domicilio.IdDomicilio)
            @Html.HiddenFor(m => m.Domicilio.IdPaciente)

            <!-- Información Personal -->
            <div class="card hc-card">
                <div class="card-header hc-card-header" data-bs-toggle="collapse" data-bs-target="#infoPersonal">
                    <span>Información Personal</span>
                    <span class="hc-collapse-icon">▼</span>
                </div>
                <div id="infoPersonal" class="collapse show">
                    <div class="card-body">
                        <!-- Datos Personales -->
                        <div class="hc-section-title">Datos Personales</div>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Paciente.TipoDocumento" class="hc-form-label hc-required-field">Tipo de Documento</label>
                                <select asp-for="Paciente.TipoDocumento" class="form-select hc-form-select">
                                    <option value="">Seleccione...</option>
                                    <option value="DNI">DNI</option>
                                    <option value="CE">CE</option>
                                    <option value="Pasaporte">Pasaporte</option>
                                </select>
                                <span asp-validation-for="Paciente.TipoDocumento" class="hc-text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Paciente.NumeroDocumento" class="hc-form-label hc-required-field">DNI / CEX</label>
                                <input asp-for="Paciente.NumeroDocumento" class="form-control hc-form-control" placeholder="Ingrese número de documento" />
                                <span asp-validation-for="Paciente.NumeroDocumento" class="hc-text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Paciente.Sexo" class="hc-form-label hc-required-field">Sexo</label>
                                <select asp-for="Paciente.Sexo" class="form-select hc-form-select">
                                    <option value="">Seleccione...</option>
                                    <option value="M">Masculino</option>
                                    <option value="F">Femenino</option>
                                </select>
                                <span asp-validation-for="Paciente.Sexo" class="hc-text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Paciente.ApellidoPaterno" class="hc-form-label hc-required-field">Apellido Paterno</label>
                                <input asp-for="Paciente.ApellidoPaterno" class="form-control hc-form-control" placeholder="Ingrese apellido paterno" />
                                <span asp-validation-for="Paciente.ApellidoPaterno" class="hc-text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Paciente.Nombre" class="hc-form-label hc-required-field">Nombres</label>
                                <input asp-for="Paciente.Nombre" class="form-control hc-form-control" placeholder="Ingrese nombres" />
                                <span asp-validation-for="Paciente.Nombre" class="hc-text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Paciente.ApellidoMaterno" class="hc-form-label hc-required-field">Apellido Materno</label>
                                <input asp-for="Paciente.ApellidoMaterno" class="form-control hc-form-control" placeholder="Ingrese apellido materno" />
                                <span asp-validation-for="Paciente.ApellidoMaterno" class="hc-text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="HistoriaClinica.EstadoCivil" class="hc-form-label hc-required-field">Estado Civil</label>
                                <input asp-for="HistoriaClinica.EstadoCivil" class="form-control hc-form-control" placeholder="Ej: Soltero, Casado..." />
                                <span asp-validation-for="HistoriaClinica.EstadoCivil" class="hc-text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="HistoriaClinica.FechaNacimiento" class="hc-form-label hc-required-field">Fecha de Nacimiento</label>
                                <input asp-for="HistoriaClinica.FechaNacimiento" type="date" class="form-control hc-form-control" />
                                <span asp-validation-for="HistoriaClinica.FechaNacimiento" class="hc-text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="HistoriaClinica.TipoSeguro" class="hc-form-label">Tipo de Seguro</label>
                                <input asp-for="HistoriaClinica.TipoSeguro" class="form-control hc-form-control" placeholder="Ej: SIS, EsSalud..." />
                                <span asp-validation-for="HistoriaClinica.TipoSeguro" class="hc-text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="HistoriaClinica.TipoSangre" class="hc-form-label hc-required-field">Tipo de Sangre</label>
                                <input asp-for="HistoriaClinica.TipoSangre" class="form-control hc-form-control" placeholder="Ej: O+, A-, B+..." />
                                <span asp-validation-for="HistoriaClinica.TipoSangre" class="hc-text-danger"></span>
                            </div>
                        </div>

                        <!-- Información de Domicilio -->
                        <div class="hc-section-title">Información de Domicilio</div>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Domicilio.Departamento" class="hc-form-label">Departamento</label>
                                <input asp-for="Domicilio.Departamento" class="form-control hc-form-control" placeholder="Ingrese departamento" />
                                <span asp-validation-for="Domicilio.Departamento" class="hc-text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Domicilio.Provincia" class="hc-form-label">Provincia</label>
                                <input asp-for="Domicilio.Provincia" class="form-control hc-form-control" placeholder="Ingrese provincia" />
                                <span asp-validation-for="Domicilio.Provincia" class="hc-text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Domicilio.Distrito" class="hc-form-label">Distrito</label>
                                <input asp-for="Domicilio.Distrito" class="form-control hc-form-control" placeholder="Ingrese distrito" />
                                <span asp-validation-for="Domicilio.Distrito" class="hc-text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Domicilio.Direccion" class="hc-form-label">Dirección</label>
                                <input asp-for="Domicilio.Direccion" class="form-control hc-form-control" placeholder="Ingrese dirección completa" />
                                <span asp-validation-for="Domicilio.Direccion" class="hc-text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Domicilio.Referencia" class="hc-form-label">Referencia</label>
                                <input asp-for="Domicilio.Referencia" class="form-control hc-form-control" placeholder="Referencia de ubicación" />
                                <span asp-validation-for="Domicilio.Referencia" class="hc-text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de Acción -->
            <div class="text-center mt-4">
                <button type="submit" class="btn hc-btn-primary me-2">
                    <span>@(Model.EsEdicion ? "Actualizar Registro" : "Registrar Paciente")</span>
                </button>
                <a asp-controller="Paciente" asp-action="Index" class="btn hc-btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Validación del lado del cliente -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Scripts específicos para el formulario de historia clínica
        document.addEventListener('DOMContentLoaded', function() {
            // Asegurar que los estilos del formulario no se vean afectados
            const formContainer = document.querySelector('.hc-form-container');
            if (formContainer) {
                formContainer.classList.add('hc-form-wrapper');
            }
            
            // Manejar el colapso de secciones
            const cardHeaders = document.querySelectorAll('.hc-card-header');
            cardHeaders.forEach(header => {
                header.addEventListener('click', function() {
                    const icon = this.querySelector('.hc-collapse-icon');
                    if (icon) {
                        icon.style.transform = this.classList.contains('collapsed') ? 'rotate(-90deg)' : 'rotate(0deg)';
                    }
                });
            });
        });
    </script>
}
@{
    ViewData["Title"] = "Órdenes de Laboratorio";
    Layout = "~/Views/Shared/_LayoutA.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/laboratorio.css" asp-append-version="true" />
}

<div class="container">
    <!-- Información del Paciente -->
    <div class="patient-info-card" id="patientInfo">
        <h2 class="patient-info-title">Información del Paciente</h2>
        <div class="loading">Cargando información del paciente...</div>
    </div>

    <!-- Órdenes de Laboratorio -->
    <div class="orders-card">
        <div class="orders-header">
            <h2 class="orders-title">Órdenes de Laboratorio</h2>
            <button class="btn-new-order" onclick="crearNuevaOrden()">
                <span>➕</span> Crear Nueva Orden
            </button>
        </div>

        <div id="ordersContainer">
            <div class="loading">Cargando órdenes...</div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/laboratorio.js" asp-append-version="true"></script>
}